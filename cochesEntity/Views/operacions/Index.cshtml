@model IEnumerable<cochesEntity.operacion>

@{
    ViewBag.Title = "Index";
}

<h2>Operaciones</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.clientes.nif)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.empleados.nif)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tipo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.precio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.clientes.nif)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.empleados.nif)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detalle", "Details", new { id=item.id }) |
        </td>
    </tr>
}

</table>
